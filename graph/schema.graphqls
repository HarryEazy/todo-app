type Task {
  id: ID!
  title: String!
  description: String
  status: String!
}

type Query {
  tasks: [Task!]!
  task(id: ID!): Task
}

type Mutation {
  addTask(title: String!, description: String): Task!
  updateTask(id: ID!, title: String, description: String, status: String): Task!
  deleteTask(id: ID!): Boolean!
  markTaskCompleted(id: ID!): Task!
}
